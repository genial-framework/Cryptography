{
    "name": "genial-framework/cryptography",
    "type": "library",
    "description": "A cryptographic dependent used to encrypt sensitive data and one-way hash passwords.",
    "homepage": "https://github.com/Genial-Framework/Cryptography",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^7.0",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "autoload": {
        "psr-4": {
            "Genial\\Cryptography\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "suggest": {
        "ext-sodium": "*"   
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

