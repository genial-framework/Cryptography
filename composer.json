{
    "name": "genial-framework/cryptography",
    "type": "library",
    "keywords": [
        "php7",
        "php-component",
        "php-library"
    ],
    "description": "Cryptography component for Genial Framework.",
    "homepage": "https://github.com/Genial-Components/Cryptography",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nicholas English",
            "email": "nenglish0820@outlook.com",
            "homepage": "https://github.com/Nenglish7",
            "role": "Developer"
        },
        {
            "name": "Genial Contributors",
            "homepage": "https://github.com/orgs/Genial-Components/people",
            "role": "Contribute"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",
        "paragonie/random_compat": "2.*",
        "paragonie/sodium_compat": "1.*",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "autoload": {
        "psr-4": {
            "Genial\\Crypt\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0|v6.0"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

